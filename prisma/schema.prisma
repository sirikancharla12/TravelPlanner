generator client {
  provider = "prisma-client-js"
  // output   = "../lib/generated/prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  email        String?  @unique
  name         String?
  uid String?    @unique
  image       String?
  authProvider AuthType @default(PHONE)
  createdAt    DateTime @default(now())
  phone        String?  @unique
  updatedAt    DateTime @updatedAt
  chats        Chat[]
}

model Chat {
  id        Int       @id @default(autoincrement())
  title     String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  userId    Int
  user      User      @relation(fields: [userId], references: [id])
  messages  Message[]
  trips     Trip[]
}

model Message {
  id        Int      @id @default(autoincrement())
  content   String
  role      String
  createdAt DateTime @default(now())
  chatId    Int
  chat      Chat     @relation(fields: [chatId], references: [id])
}

model Trip {
  id           Int       @id @default(autoincrement())
  fromLocation String?
  toLocation   String?
  date         DateTime?
  itinerary    Json?
  flightdata   Json?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  chatId       Int
  chat         Chat      @relation(fields: [chatId], references: [id])
}

enum AuthType {
  GOOGLE
  PHONE
}
